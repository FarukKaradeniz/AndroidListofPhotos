<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient android:angle="315" android:centerX="0%" android:centerColor="#39AFC7" android:startColor="#E8E8E8" android:endColor="#46D9E4" android:type="linear" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
            <size android:width="140dp" android:height="60dp" />
            <stroke android:width="1dp" android:color="#00DDFF" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="20dp" />
            <gradient android:angle="315" android:centerX="0%" android:centerColor="#46d9e4" android:startColor="#E8E8E8" android:endColor="#39AFC7" android:type="linear" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
            <stroke android:width="1dp" android:color="#00DDFF" />
        </shape>
    </item>

</selector>